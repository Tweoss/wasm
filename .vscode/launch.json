{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "name": "Launch Brave against localhost",
            "request": "launch",
            "runtimeExecutable": "/Applications/Brave Browser Dev.app/Contents/MacOS/Brave Browser Dev",
            "userDataDir": true,//"${workspaceRoot}/.gitignore/brave",
            "sourceMaps": true,
            "url": "http://localhost:10001/",
            // "trace": true,
            "port": 10001,
            "webRoot": "${workspaceRoot}"
            // "preLaunchTask": "${defaultBuildTask}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Brave",
            "port": 10001,
            "webRoot": "${workspaceRoot}"
        }
    ]
}//useless comment